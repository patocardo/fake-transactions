<div class="m-auto">
  <div class="card">
    <div class="card-header">
      Commit new transaction
    </div>
    <div class="card-body">
      <form class="needs-validation" id="commitForm" novalidate>
        <div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="commitType" id="commitCredit" value="credit">
            <label class="form-check-label" for="commitCredit">Credit</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="commitType" id="commitDebit" value="debit">
            <label class="form-check-label" for="commitDebit">Debit</label>
          </div>
        </div>
        <div class="form-group">
          <label for="commitAmount">Amount</label>
          <input type="number" class="form-control" id="commitAmount" aria-describedby="amountHelp" required>
          <div class="invalid-feedback">
            Please enter a number
          </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>
</div>